#!/bin/sh
# WM/DE independant autostart
setxkbmap -layout 'us,ar' -option 'grp:alt_shift_toggle' &
feh --no-fehbg --bg-fill --randomize ~/.local/wallpapers/* &
redshift -PO 5000 &
pgrep picom || picom --experimental-backends &
# wait for the WM to start before running
while true; do
  if pgrep dwm > /dev/null; then
    ~/.config/polybar/start-polybar.sh &
    sxhkd &
    break
  fi
done &
